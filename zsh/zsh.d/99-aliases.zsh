alias ls='ls --color=auto -h '
alias lsc='ls --color=always -h '

alias ll='ls -l '
alias llc='lsc -l '

alias la='ls -A '
alias lac='lsc -A '

alias lla='ls -Al '
alias llac='lsc -Al '

alias lh='ls -dA .* '
alias lhc='lsc -dA .* '

alias llh='ls -dAl .* '
alias llhc='lsc -dAl .* '

alias grep='grep -i --color=auto '
alias grepc='grep -i --color=always '
