sset history-limit 100000
sset key-table main
sset lock-after-time 0
sset lock-command ${LOCK}
sset message-command-style "${message_command_style}"
sset message-style "${message_style}"
sset mouse off
sset prefix None
sset prefix2 None
sset renumber-windows on
sset repeat-time 0
sset set-titles on
sset set-titles-string "#{client_session}"
sset silence-action none
sset 'status' on
sset status-interval 5
sset status-justify centre
sset status-keys emacs
sset status-left "${status_left}"
sset status-left-length 30
sset status-left-style "${status_left_style}"
sset status-right "${status_right}"
sset status-position bottom
sset status-right-length 100
sset status-right-style "${status_right_style}"
sset status-style "${status_style}"
sset visual-activity off
sset visual-bell off
sset visual-silence off
sset word-separators ' -_@/'

wset aggressive-resize on
wset allow-rename off
wset alternate-screen on
